<resources>
    <!-- Tema padrão do login -->
    <style name="StyleWhatsApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Cores principais -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Toolbar" parent="Theme.AppCompat.NoActionBar">
        <!-- Customizações específicas para a Toolbar -->
    </style>

    <!-- Define a aparência circular da ImageView -->
    <style name="CircularShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>
